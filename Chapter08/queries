#Query Structure

select count(*) from Product
group by category; 

POST chapter8/_search
{
 "aggs" :{
   "category_products" : {
     "terms" : {
       "field" : "category"
      }
    }
  }
}

select count(*) from Product
where manufacturer = 'Samsung' 
group by category2; 

POST chapter8/_search
 {
   "query": {
     "match": {
       "manufacturer": "Samsung"
     }
   },
   "aggs": {
     "category_products": {
       "terms": {
         "field": "category"
       }
     }
   }
 }

POST chapter8/_search
 {
   "size": 0,
   "aggs": {
     "category_products": {
       "terms": {
         "field": "category"
       }
     }
   }
 }


#Multi-level Aggregations 

select avg(products_sold) from Product 
group by category; 

POST chapter8/_search
 {
   "size" : 0,
   "aggs": {
     "category_products": {
       "terms": {
         "field": "category"
       },
       "aggs": {
         "products_sold": {
           "avg": {
             "field": "products_sold"
           }
         }
       }
     }
   }
 }

POST chapter8/_search
 {
   "size": 0, 
   "aggs": {
     "category_products": {
       "terms": {
         "field": "category"
       },
       "aggs": {
         "manufacturer": {
           "terms": {
             "field": "manufacturer"
           }
         }
       }
     }
   }
 }

#Types of Aggregations

#Terms Aggregations (Group by)
POST chapter8/_search
 {
   "size" : 0,
   "aggs": {
     "category_products": {
       "terms": {
         "field": "category",
         "size": 2
       }
     }
   }
 }

#Order
POST chapter8/_search
 {
   "size": 0,
   "aggs": {
     "category_products": {
       "terms": {
         "field": "category",
         "order": {
           "_term": "asc"
         }
       }
     }
   }
 }

#Minimum document count
POST chapter8/_search
 {
  "size": 0, 
  "aggs" :{
    "category_products" : {
      "terms" : {
        "field" : "category",
        "min_doc_count": 5
       }
     }
   }
 }

#Missing Values 
POST chapter8/_search
 {
   "size" : 0,
   "aggs": {
     "category_products": {
       "terms": {
         "field": "category",
         "missing": "Other‚Äù
       }
     }
   }
 }

#Aggregations based on Filters

#Based on Filters
 POST chapter8/_search
 {
   "aggs": {
     "category_products": {
       "filters": {
         "filters": {
           "new_products": {
             "range": {
               "release_date": {
                 "gte": "2016-01-01"
               }
             }
           },
           "old_products": {
             "range": {
               "release_date": {
                 "lte": "2016-01-01"
               }
             }
           }
         }
       }
     }
   }
 }

#Aggs bases on Filters
 POST chapter8/_search
 {
   "size": 0,
   "aggs": {
     "category_products": {
       "filters": {
         "o
         "filters": {
           "2016_Products": {
             "range": {
               "release_date": {
                 "gte": "2016-01-01"
               }
             }
           },
           "2015_Products": {
             "range": {
               "release_date": {
                 "gte": "2015-01-01",
                 "lte": "2016-01-01"
               }
             }
           }
         }
       },
       "aggs": {
         "products_sold": {
           "avg": {
             "field": "products_sold"
           }
         }
       }
     }
   }
 }


#Aggregations on Dates ( Range, Histogram )

#Date Range
POST chapter8/_search
 {
   "aggs": {
     "range": {
       "date_range": {
         "field": "release_date",
         "ranges": [
           {
             "from": "2016-01-01",
             "to": "now"
           },
           {
             "from": "2015-01-01",
             "to": "2016-01-01"
           },
           {
             "to": "2015-01-01"
           }
         ]
       }
     }
   }
 }

#Date Range with Time zone
 POST chapter8/_search
 {
   "aggs": {
     "range": {
       "date_range": {
         "field": "release_date",
         "time_zone": "PST8PDT",
         "ranges": [
           {
             "from": "2016-01-01",
             "to": "now"
           },
           {
             "from": "2015-01-01",
             "to": "2016-01-01"
           },
           {
             "to": "2015-01-01"
           }
         ]
       }
     }
   }
 }

#Date Histogram
 POST chapter8/_search
 {
   "size": 0,
   "aggs": {
     "product_release": {
       "date_histogram": {
         "field": "release_date",
         "interval": "1y",
         "format": "YYYY-MM-dd"
       }
     }
   }
 }


#Aggregations on Numeric values ( Range, Histogram )

#Aggs bases on Filters
 POST chapter8/_search
 {
   "size": 0,
   "aggs": {
     "price_range": {
       "range": {
         "field": "products_sold",
         "ranges": [
           {
             "to": "10"
           },
           {
             "from": "10",
             "to": "20"
           },
           {
             "from": "20"
           }
         ]
       }
     }
   }
 }


POST chapter8/_search
 {
   "size": 0,
   "aggs": {
     "products_sold": {
       "range": {
         "field": "products_sold",
         "ranges": [
           {
             "key": "Low",
             "to": "10"
           },
           {
             "key": "Medium",
             "from": "10",
             "to": "20"
           },
           {
             "key": "High",
             "from": "20"
           }
         ]
       }
     }
   }
 }

POST chapter8/_search
 {
   "size": 0,
   "query": {
     "match": {
       "category": "Cell Phones"
     }
   },
   "aggs": {
     "products_sold": {
       "histogram": {
         "field": "products_sold",
         "interval": 5
       }
     }
   }
 }

POST chapter8/_search
 {
   "size": 0,
   "query": {
     "match": {
       "category": "Cell Phones"
     }
   },
   "aggs": {
     "products_sold": {
       "histogram": {
         "field": "products_sold",
         "interval": 10,
         "extended_bounds": {
           "min": "0",
           "max": "50"
         }
       }
     }
   }
 }


#Aggregations on Geo Location ( Distance, Bounds )

#Store Mapping
 PUT chapter8/_mapping/store
 {
   "properties": {
     "name": {
       "type": "keyword"
     },
     "location": {
       "type": "geo_point"
     }
   }
 }

#Index Stores
 PUT chapter8/store/1
 {
   "name": "Store1",
   "location": {
     "lat": "37.339724",
     "lon": "-121.873848"
   }
 }
 
 PUT chapter8/store/2
 {
   "name": "Store2",
   "location": {
     "lat": "37.338495",
     "lon": "-121.880736"
   }
 }


#Geo Distance
 POST chapter8/_search
 {
   "size": 0, 
   "aggs": {
     "distance": {
       "geo_distance": {
         "field": "location",
         "origin": "37.3382, -121.8863",
         "unit": "mi",
         "ranges": [
           {
             "to": 5
           },
           {
             "from": 5,
             "to": 10
           },
           {
             "from": 10
           }
         ]
       }
     }
   }
 }

#Geo Bounds
 POST chapter8/_search
 {
   "size": 0,
   "aggs": {
     "boundary": {
       "geo_bounds": {
         "field": "geo_location"
       }
     }
   }
 }


