
#Aggregation Basics
select avg(rating) from Product group by category;

#Sample Data

#Delete existing index
 DELETE chapter8
 
 #Chapter 8 Mappings
 PUT chapter8
 {
   "settings": {},
   "mappings": {
     "product": {
       "properties": {
         "product_name": {
           "type": "text"
         },
         "manufacturer" : {
           "type": "keyword"
         },
         "category" : {
           "type": "keyword"
         },
         "products_sold" : {
           "type": "integer"
         },
         "variations": {
           "type": "nested",
           "properties": {
             "color": {
               "type": "keyword"
             },
             "storage": {
               "type": "keyword"
             },
             "unit_price": {
               "type": "double"
             }
           }
         }
       }
     },
     "product_review": {
       "_parent": {
         "type": "product"
       },
       "properties": {}
     }
   }
 }


